<h1>Eat Ah Burger!</h1>

<h2>Burgers ordered!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> order/burger-block devoured1=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> order/burger-block devoured1=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Make an order</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Order:</label>
    <input type="text" id="order" name="name">
  </div>

  <button type="submit">Place order</button>
</form>