<div class="largestBox">
<h1>Eat Ah Burger!</h1>
<div class="boxes">
  <div class="form-group">
<div id="center">
<div class="in">
<h2>&#127828 Burgers ordered &#127828</h2>
<div id="orderIn">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> order/burger-block ordered1=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>
<div class="out">
<h2>&#x1F432 Burgers devoured &#x1F432</h2>

<div id="orderOut">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> order/burger-block ordered1=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>
<h2 id="make">Make an order</h2>

<form class="create-form">
    <input type="text" id="order" name="name">
  <button type="submit" id="place">Place order</button>
</form>
  </div>
</div>
</div>